{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "bunVersion": "1.x",
  "functions": {
    "api/**": {
      "runtime": "edge"
    },
    "server/index.ts": {
      "runtime": "edge"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
