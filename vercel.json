{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "bunVersion": "1.x",
  "functions": {
    "api/**": {
      "runtime": "edge"
    },
    "server/index.ts": {
      "runtime": "edge"
    }
  },
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/bun"
    },
    {
      "src": "dist/static/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
